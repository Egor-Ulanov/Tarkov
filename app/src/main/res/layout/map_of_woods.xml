<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Блок с картой и интерактивными элементами -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="200dp">

        <!-- Карта -->
        <com.davemorrissey.labs.subscaleview.SubsamplingScaleImageView
            android:id="@+id/mapImageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000">

        <!-- Название карты -->
        <TextView
            android:id="@+id/mapTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Название карты"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Кнопка закрыть -->
        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="12dp"
            android:background="@android:color/transparent"
            android:contentDescription="Закрыть карту"
            android:src="@drawable/circle_close_button2" />

    </RelativeLayout>

    <!-- Верхний блок с названием карты и кнопкой закрыть -->

    <!-- Кнопки увеличения и уменьшения масштаба -->
    <LinearLayout
        android:id="@+id/controlsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_alignParentBottom="true">

        <!-- Кнопка уменьшения масштаба -->
        <ImageButton
            android:id="@+id/zoomOutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackgroundBorderless"
            android:layout_marginStart="16dp"/>

        <!-- Кнопка увеличения масштаба -->
        <ImageButton
            android:id="@+id/zoomInButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="?android:selectableItemBackgroundBorderless"
            android:layout_marginEnd="16dp"/>

    </LinearLayout>

    <!-- Нижний блок с фильтрами -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
        android:background="#FFFFFF">

        <!-- Кнопка для открытия/закрытия списка -->
        <ImageButton
            android:id="@+id/expandButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/icon_up"
            android:background="?android:attr/selectableItemBackground"
            android:contentDescription="Открыть/закрыть список"
            android:onClick="toggleList" />


        <!-- Список с категориями -->
        <LinearLayout
            android:id="@+id/categoryList"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/expandButton"
            android:orientation="vertical"
            android:visibility="gone">

            <!-- Категория "Extracts" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Extracts"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp"/>

            <!-- Блок с кнопками для категории "Extracts" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Button 1" />

                <!-- Добавьте другие кнопки, если необходимо -->
            </LinearLayout>

            <!-- Категория "Legend" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Legend"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp"/>

            <!-- Блок с кнопками для категории "Legend" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Button 2" />

                <!-- Добавьте другие кнопки, если необходимо -->
            </LinearLayout>

            <!-- Категория "Quests" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quests"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp"/>

            <!-- Блок с кнопками для категории "Quests" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Button 3" />

                <!-- Добавьте другие кнопки, если необходимо -->
            </LinearLayout>

            <!-- Категория "Another" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Another"
                android:textSize="18sp"
                android:textStyle="bold"
                android:padding="8dp"/>

            <!-- Блок с кнопками для категории "Another" -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="16dp">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Button 4" />

                <!-- Добавьте другие кнопки, если необходимо -->
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


    <!-- Прогресс-бар -->
    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center|top"
        android:layout_marginTop="70dp"
        android:visibility="visible" />

</FrameLayout>
